    "pdp": {
      "name": "Product Detail Page",
      "files": ["main-product.liquid", "figma-product-related.liquid", "product-card.liquid", "card-gallery.liquid"],
      "keywords": ["pdp", "product", "variant", "size", "add to bag", "add to cart", "sold out", "inventory", "swatch"],
      "priority_base": 2
    },
    "cart": {
      "name": "Cart & Checkout",
      "files": ["figma-cart.liquid", "cart-drawer.liquid", "cart-products.liquid", "cart-summary.liquid"],
